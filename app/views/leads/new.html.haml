.topbar
  - if @products.nil?
    .company
      .row.user-top-menu
        .large-12.columns
          .profile-name.tiny-icon
            %a.back
            Select Company
.sub-bar
  .row
    .large-12.columns
      Scroll Up or Down
.details  
  - if @products.nil?
    .companies    
      - Company.all.each do |company|
        .company{ class: cycle('odd', 'even') }
          %a.logo{ href: "#{new_lead_path}?company_id=#{company.id}" }
            = image_tag company.image.url
          .description
            %h3
              = company.name
            .body
              = company.description
  - else
    .products
      - @products.each do |product|
        .product
          %a.logo{ href: "#{new_lead_path}?product_id=#{product.id}" }
            - if !product.image.nil?
              = image_tag product.image.url
          .description
            %h3
              = product.name
            .body
              = product.description
